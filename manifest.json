{
    "manifest_version": 3,
    "name": "AutoScroll - Multi-Platform Video Scroller",
    "short_name": "AutoScroll",
    "version": "2.0.0",
    "description": "Automatically scroll to the next video on Instagram Reels, YouTube Shorts, TikTok, X (Twitter), and Facebook Reels when the current one ends.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.instagram.com/*",
        "https://www.youtube.com/*",
        "https://www.tiktok.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.facebook.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "AutoScroll - Multi-Platform Video Scroller"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/*",
                "https://www.youtube.com/*",
                "https://www.tiktok.com/*",
                "https://twitter.com/*",
                "https://x.com/*",
                "https://www.facebook.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ]
}